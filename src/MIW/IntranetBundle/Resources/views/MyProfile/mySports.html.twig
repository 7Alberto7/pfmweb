{% extends "MIWIntranetBundle:Default:base.html.twig" %}

{% block commonup%}

<ul class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="{{path('intranet_home')}}">WePlay</a></li>
    <li class="active">Mis Deportes</li>
</ul>

{% endblock%}

{% block sidecontent %}

    <div class="row margin-top-20">
        <div class="col-xs-12">
            <img class="img-responsive img-thumbnail" src="{{ asset('bundles/miwintranet/images/default-user-photo.png') }}" alt="Nombre de usuario"/>
            <ul class="nav nav-pills nav-stacked">
                <li>
                    <a href="{{path('intranet_myprofile_info')}}">Mis Datos</a>
                </li>
                <li class="active">
                    <a href="{{path('intranet_myprofile_sports')}}">Mis Deportes</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_games')}}">Mis Partidos</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_messages')}}">
                        <span class="badge pull-right">0</span>
                        Mis Mensajes
                    </a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}

{% block maincontent %}

    <blockquote class="margin-top-20">
        <p>Introduce los deportes a los que quieres jugar en WePlay.</p>
    </blockquote>

    <div class="row margin-top-20">        
            <div class="col-xs-12">
                {% if mySports | length > 0 %}            
                    <div class="list-group">
                        {% for sports in mySports %}
                            <div class="list-group-item" data-name="{{sports.sport.name}}" data-id="{{sports.sport.id}}" data-level="{{sports.level}}">
                                <img class="img-responsive img-thumbnail" src="{{ asset('bundles/miwintranet/images/message_avatar2.png') }}" alt="{{ sports.sport.name }}"/>
                                <button class="btn btn-success pull-right action-get-sport" data-toggle="modal" data-target="#modifySportModal">Modificar Deporte</button>
                                <h4>{{ sports.sport.name }}</h4>
                            </div>
                        {% endfor %}
                    </div>  
                {% else%}
                    <p> Actualmente no tienes deportes asignados </p>
                {% endif %}
                {% if myNotSports | length > 0 %} 
                    <div class="row">
                        <button class="btn btn-success pull-left" data-toggle="modal" data-target="#createSportModal">Añadir Deporte</button>
                    </div>
                {% endif %}
                
                    <!-- /modal-añadir -->
                <div class="modal fade" id="createSportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <button type="button" class="close text-white" data-dismiss="modal" aria-hidden="true">
                                        <i class="fa fa-times text-white"></i>
                                </button>
                                <h3>Añadir Deporte</h3>
                            </div> <!-- /modal-header -->
                            <div class="modal-body">	
                                <div class="row text-center">
                                    <div class="form-group">
                                        <label>Elige un Deporte</label>
                                        <!-- actualizar lista de deportes -->
                                        <select id="selectSports">
                                            {% for notSports in myNotSports %}
                                                <option value="{{ notSports.id }}">{{ notSports.name }}</option>
                                            {% endfor %}
                                        </select>  
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="form-group">
                                        <label>Nivel</label>
                                        {% for i in 0..4 %}
                                            <a href="#" class="btn btn-danger action-level" data-id="{{i}}"> 
                                                <i class="fa fa-star"></i> 
                                            </a>
                                        {% endfor %}                
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="form-group">
                                        <input class="btn btn-primary action-add-sport" type="button" value="Guardar"/>
                                    </div>
                                </div>
                            </div> <!-- /modal-body -->
                        </div> <!-- /modal-content -->
                    </div> <!-- /modal-dialog -->
                </div>
                
                <!-- /modal-modificar -->
                <div class="modal fade" id="modifySportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <button type="button" class="close text-white" data-dismiss="modal" aria-hidden="true">
                                        <i class="fa fa-times text-white"></i>
                                </button>
                                <h3>Modificar Deporte</h3>
                            </div> <!-- /modal-header -->
                            <div class="modal-body">	
                                <div class="row text-center">
                                    <div class="form-group">
                                        <label>Deporte: </label> 
                                        <a class="label-nameSport"></a>
                                        <input class="hidden-idSport" type="hidden"></input>
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="form-group">
                                        <label>Nivel</label>
                                        {% for i in 0..4 %}
                                            <a href="#" class="btn btn-danger action-level" data-id="{{ i }}"> 
                                                <i class="fa fa-star"></i> 
                                            </a>
                                        {% endfor %}
                                    </div>            
                                </div>
                                <div class="row text-center">
                                    <div class="form-group">
                                        <input class="btn btn-primary action-edit-sport" type="button" value="Editar"/>
                                        <input class="btn btn-primary action-delete-sport" type="button" value="Borrar"/>
                                    </div>
                                </div>
                            </div> <!-- /modal-body -->
                        </div> <!-- /modal-content -->
                    </div> <!-- /modal-dialog -->
                </div>            
            </div>
        
    </div>

<script>
    $(document).ready(function() {
        $(document).on("click", '.action-get-sport', function(event) {
            event.preventDefault();
            var element = $(this).closest('div.list-group-item');
            var id = element.data('id');
            var nameSport = element.data('name');
            var level = element.data('level');
            $(document).find('.label-nameSport').html(nameSport);
            $(document).find('.hidden-idSport').val(id);
        });
        
        $(document).on("click", '.action-level', function(event) {
            event.preventDefault();
            //cambiar imagen de estrellitas 
        });
        
        $('.action-add-sport').on('click', function() {
                $.ajax({
                    method: "GET",
                    url: "{{path('intranet_ajax_add_sport')}}",
                    dataType: "json",
                    data: {
                        id: $('#selectSports option:selected').val(),
                        name: $('#selectSports option:selected').text(),
                        level: 1 //contar estrellitas seleccionadas
                    },
                    success: function(data) {
                        $('#createSportModal').modal('hide');   
                        var list = $(document).find('.list-group');
                        var html = "<div class='list-group-item' data-name=" + data.name + " data-id=" + data.id + " data-level=" + data.level + ">";
                        html += "<img class='img-responsive img-thumbnail' src='bundles/miwintranet/images/message_avatar2.png' />";
                        html += "<button class='btn btn-success pull-right action-get-sport' data-toggle='modal' data-target='#modifySportModal'>Modificar Deporte</button>";
                        html += "<h4>" + data.name + "</h4></div>";
                        list.append(html);                        
                    }
                });
         });
         
         $('.action-edit-sport').on('click', function() {
                $.ajax({
                    method: "GET",
                    url: "{{path('intranet_ajax_add_sport')}}",
                    dataType: "json",
                    data: {
                        id: $('.hidden-idSport').val(),
                        name: $('.label-nameSport').val(),
                        level: 3 //contar estrellitas seleccionadas
                    },
                    success: function(data) {
                        $('#modifySportModal').modal('hide');
                        /*var list = $(document).find('.list-group');
                        var html = "<div class='list-group-item' data-name=" + data.name + " data-id=" + data.id + ">";
                        html += "<img class='img-responsive img-thumbnail' src='bundles/miwintranet/images/message_avatar2.png' />";
                        html += "<button class='btn btn-success pull-right action-get-sport' data-toggle='modal' data-target='#modifySportModal'>Modificar Deporte</button>";
                        html += "<h4>" + data.name + "</h4></div>";
                        list.replaceWith(html); */
                    }
                });
         });
         
         $('.action-delete-sport').on('click', function() {
                $.ajax({
                    method: "GET",
                    url: "{{path('intranet_ajax_delete_sport')}}",
                    dataType: "json",
                    data: {
                        id: $('.hidden-idSport').val()
                    },
                    success: function(data) {
                        $('#modifySportModal').modal('hide');
                        var element = $(document).find('.list-group-item');
                        var node = element.find("[data-id='" + data.id + "']");
                        node.remove(); 
                    }
                });
         });
         
    });        
</script>   

{% endblock %}

{% block commondown%}
{% endblock %}

