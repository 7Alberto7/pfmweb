{% extends "MIWIntranetBundle:Default:base.html.twig" %}

{% block commonup%}

<ul class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="{{path('intranet_home')}}">WePlay</a></li>
    <li class="active">Mis Deportes</li>
</ul>

{% endblock%}

{% block sidecontent %}

    <div class="row margin-top-20">
        <div class="col-xs-12">
            <img class="img-responsive img-thumbnail" src="{{ asset('bundles/miwintranet/images/default-user-photo.png') }}" alt="Nombre de usuario"/>
            <ul class="nav nav-pills nav-stacked">
                <li>
                    <a href="{{path('intranet_myprofile_info')}}">Mis Datos</a>
                </li>
                <li class="active">
                    <a href="{{path('intranet_myprofile_sports')}}">Mis Deportes</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_games')}}">Mis Partidos</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_messages')}}">
                        <span class="badge pull-right">0</span>
                        Mis Mensajes
                    </a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}

{% block maincontent %}

    <blockquote class="margin-top-20">
        <p>Introduce los deportes a los que quieres jugar en WePlay.</p>
    </blockquote>
    <div class="row margin-top-20">
        <div class="col-xs-12">
            {% if mySports | length > 0 %}            
                <div class="list-group" >
                    {% for sport in mySports %}
                        <div class="list-group-item" data-id="{{sport.id}}">
                            <img class="img-responsive img-thumbnail" src="{{ asset('bundles/miwintranet/images/message_avatar2.png') }}" alt="{{ sport.name }}"/>
                            <button class="btn btn-success pull-right" data-toggle="modal" data-target="#modifySportModal" data-id="{{sport.id}}">Modificar Deporte</button>
                            <h4>{{ sport.name }}</h4>
                        </div>
                    {% endfor %}
                </div>            
            {% endif %}
            <div class="row">
                <button class="btn btn-success pull-left" data-toggle="modal" data-target="#createSportModal">AÃ±adir Deporte</button>
            </div>
            <!-- /modales -->
            <div class="modal fade" id="createSportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                {{ render(controller("MIWIntranetBundle:Sport:createSport")) }}
            </div>
            <div class="modal fade" id="modifySportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                {{ render(controller("MIWIntranetBundle:Sport:modifySport")) }}
            </div>            
        </div>
    </div>

{% endblock %}

{% block commondown%}
{% endblock %}

{% block javascripts%}
{% endblock%}

