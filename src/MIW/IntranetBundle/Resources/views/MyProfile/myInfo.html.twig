{% extends "MIWIntranetBundle:Default:base.html.twig" %}

{% block commonup%}

<ul class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="{{path('intranet_home')}}">WePlay</a></li>
    <li class="active">Mis Datos</li>
</ul>

{% endblock%}
{% block sidecontent %}

    <div class="row margin-top-20">
        <div class="col-xs-12">
            <img class="img-responsive img-thumbnail" src="{{ asset('bundles/miwintranet/images/default-user-photo.png') }}" alt="Nombre de usuario"/>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="{{path('intranet_myprofile_info')}}">Mis Datos</a></li>
                <li>
                    <a href="{{path('intranet_myprofile_sports')}}">Mis Deportes</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_games')}}">Mis Partidos</a>
                </li>
                <li>
                    <a href="{{path('intranet_myprofile_messages')}}">
                        <span class="badge pull-right">0</span>
                        Mis Mensajes
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block maincontent %}

    <blockquote class="margin-top-20">
        <p>Rellena tus datos para que te hagamos las mejores recomendaciones.</p>
    </blockquote>
    <div class="row margin-top-20">
        <div class="col-xs-12">
            <!-- Nav tabs -->
            <ul class="nav nav-pills nav-justified">
              <li class="active">
                  <a href="#userInfo" data-toggle="tab">Datos de Usuario</a>
              </li>
              <li>
                  <a href="#userLocation" data-toggle="tab">Datos de Localización</a>
              </li>
              <li>
                  <a href="#userPassword" data-toggle="tab">Cambiar Contraseña</a>
              </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content margin-top-20">
              <div class="tab-pane active" id="userInfo">
                  Aquí va el formulario de Datos de Usuario
              </div>
              <div class="tab-pane" id="userLocation">
                  Aquí va el formulario de Datos de Localización
              </div>
              <div class="tab-pane" id="userPassword">
                  Aquí va el formulario de Cambiar Contraseña
              </div>
            </div>
        </div>
    </div>



{% endblock %}
{% block commondown%}
{% endblock %}
{% block javascripts%}
<script type="text/javascript">
    $('#myInfoTab a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })
</script>
<script type="text/javascript" src="{{ asset('js/maps.js') }}"></script>
{% endblock%}

